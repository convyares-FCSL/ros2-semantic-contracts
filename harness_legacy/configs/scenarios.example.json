{
    "version": "0.1",
    "scenarios": [
        {
            "id": "A1_no_ghosts_after_rejection",
            "kind": "send_goal_no_ghosts",
            "notes": "Second goal rejected by concurrency; must not be observable via status/feedback/result/cancel.",
            "steps": [
                {
                    "op": "send_goal",
                    "goal_id": "01010101010101010101010101010101",
                    "payload": {}
                },
                {
                    "op": "send_goal",
                    "goal_id": "02020202020202020202020202020202",
                    "payload": {}
                },
                {
                    "op": "assert",
                    "assert": {
                        "type": "goal_send_decision",
                        "goal_id": "02020202020202020202020202020202",
                        "accepted": false,
                        "reason": "ConcurrencyPolicy"
                    }
                },
                {
                    "op": "request_cancel",
                    "goal_id": "02020202020202020202020202020202"
                },
                {
                    "op": "assert",
                    "assert": {
                        "type": "cancel_response",
                        "goal_id": "02020202020202020202020202020202",
                        "accepted": false,
                        "reason": "UnknownGoal"
                    }
                }
            ]
        }
    ]
}